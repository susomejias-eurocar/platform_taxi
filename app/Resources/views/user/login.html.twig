{% extends 'base.html.twig' %}


{% block main %}
    <main>
        {# <div >
        {% if is_granted('ROLE_USER') %}
                <div style="color:#000">{{app.user.name}}</div>
        {%endif%}
        </div> #}
        <div class="container col-lg-12 col-sm-12 background-city" style="padding:50px;min-height:100vh;display:flex;align-items:center;" >
            <div class="card col-lg-4 offset-lg-4 transparent  animated jackInTheBox">
               <form action="{{ path('login') }}" method="POST">
               {% if msgError is defined %}
               {% endif %}
                <div class="card-body">
                 <h1 class="text-light" style="font-weight:bold; padding:10px">Platform Taxi</h1>
                        <div class="form-group">
                            <label for="email" class="text-light boldText">Email</label>
                            {% if msgError is not defined %}
                                <input required name="_username" type="email" class="form-control inputTransparent" id="email" aria-describedby="emailHelp" placeholder="Introduce email" value="{{ last_username }}">
                            {% else %}
                                <input required name="_username" type="email" class="form-control inputTransparent" id="email" aria-describedby="emailHelp" placeholder="Introduce email">
                            {% endif %}

                        </div>
                        <div class="form-group">
                            <label for="password1" class="text-light boldText">Contraseña</label>
                            <input required name="_password" type="password" class="form-control inputTransparent" id="password" placeholder="Introduce contraseña">
                        </div>

                        <input type="hidden" name="_failure_path" value="/loginFailure"/>
                        <input type="hidden" name="_target_path" value="/panel" />

                        <input type="submit" class="btn" style="background:rgba(255, 255, 255, .9);color:#263238;font-weight:bold;font-size:1.1rem" id="btnLogin" value="Entrar">
                        </br>
                        </br>
                        <a href="{{ path('register') }}" style="padding-left:10px;color:#fff;font-weight:bold">¿Todavía no estás registrado?</a>
                        <a href="{{ path('show_forget_password') }}" style="padding-left:10px;color:#fff;font-weight:bold">¿Olvidaste tu contraseña?</a>
                </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
    {% if msgError is defined and msgError != "" %}
            Swal.fire(
                '{{ msgError }}',
                "",
                "error"
            );
    {% endif %}
    {% if responseToken is defined %}
            Swal.fire(
                responseToken.message
                "",
                "error"
            );       
    {% endif %}
</script>
{% endblock %}
