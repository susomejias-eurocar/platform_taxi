{% extends 'base.html.twig' %}

{% block main %}
    <main>
        <div class="container col-lg-12 background-city" style="padding:50px;min-height:100vh;display:flex;align-items:center;" >
            <div class="card col-lg-4 offset-lg-4 transparent">
               
                <div class="card-body">
                 <h1 class="text-light" style="font-weight:bold; padding:10px">Platform Taxi Proyect</h1>

                    <h3 class="text-light" style="font-weight:bold; padding:10px">Asignar coche</h3>


                        <div class="form-group">
                            <label for="drivers" class="text-light boldText">Conductor: </label>
                            <select name="drivers" id="drivers">
                                <option value=NULL>Sin coche</option>
                                {% for car in cars %}
                                <option value={{car['id']}}>{{car['trademark']}} {{car['model']}} {{car['version']}} - {{car['plate']}}</option>
                                {% endfor %}

                            </select>
                        </div>

                        <div class="form-group">
                            <label for="cars" class="text-light boldText">Coche: </label>
                            <select name="cars" id="cars">
                                <option value=NULL>Sin coche</option>
                                {% for car in cars %}
                                <option value={{car['id']}}>{{car['trademark']}} {{car['model']}} {{car['version']}} - {{car['plate']}}</option>
                                {% endfor %}

                            </select>
                        </div>

                        <button  class="btn" style="background:rgba(255, 255, 255, .9);color:#263238;font-weight:bold;font-size:1.1rem" id="btnRegister">Registrar</button>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}

{{ parent() }}

<script>

    let $cars = $("#cars");
    let $drivers = $("#drivers");

    if($cars.length == 1){
        $('#btnRegister').prop("disabled",true);
        $cars.prop("disabled", true);
        $("#cars option:first").text("No existen coches disponibles");
    }
    if($drivers.length == 1){
        $('#btnRegister').prop("disabled",true);
        $drivers.prop("disabled", true);
        $("#drivers option:first").text("No existen conductores disponibles");
    }


    $('#btnRegister').click(()=>{
            $.ajax({
                url: "{{ path('ajax_register_driver') }}",
                type: 'POST',
                dataType: 'json',
                data: { 
                    email: $('#email').val() , 
                    password1: $('#password1').val(), 
                    password2: $('#password2').val(), 
                    phone: $("#phone").val(),
                    driverName: $("#driverName").val(),
                    driverLastName: $("#driverLastName").val(),
                    car: $("#car").val(),
                    idCompany: {{ companyId }}
                },
                success: function(result){

                    if (!result.status){
                        Swal.fire(
                        result.message,
                        "",
                        "error"
                        )       
                        console.log(result);       
                    }else{
                        Swal.fire(
                        result.message,
                        "",
                        "success"
                        )    

                        //setTimeout(function(){ window.location.href = "login" }, 1500);
                        
                    }
                    
                    
                },
            });
    });
</script>

{% endblock %}