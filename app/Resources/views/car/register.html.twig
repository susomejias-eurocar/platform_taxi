{% extends 'base.html.twig' %}

{% block main %}
    <main>
        <div class="container col-lg-12" style="padding:25px 30px;min-height:100vh;display:flex;align-items:center;" >
            <div class="card col-lg-5 offset-lg-3"  style="background:#F4C05C">
               
                <div class="card-body">
                 <h1  style="font-weight:bold; padding:10px">Platform Taxi Proyect</h1>

                    <h3 style="font-weight:bold; padding:10px">Añadir coche</h3>

                        <div class="form-group">
                            <label for="plate"  class="boldText">Matrícula</label>
                            <input required name="plate" type="plate" class="form-control" id="plate" aria-describedby="emailHelp" placeholder="Introduce la matrícula">
                        </div>
                        <div class="form-group">
                            <label for="marca" class=" boldText">Marca</label>
                            <input required name="marca" type="text" class="form-control" id="marca" placeholder="Introduce la marca">
                        </div>

                        <div class="form-group">
                            <label for="modelo" class=" boldText">Modelo</label>
                            <input required name="modelo" type="password" class="form-control" id="modelo" placeholder="Repita el modelo">
                        </div> 

                        <div class="form-group">
                            <label for="version" class=" boldText">Versión</label>
                            <input required name="version" type="tel" class="form-control" id="version" placeholder="Introduce teléfono">
                        </div>

                        <div>
                            <label for="car" class=" boldText">Estado</label>
                            <select class="form-control" style="margin-bottom:20px" name="car" id="car">
                                <option value="avalaible">Disponible</option>                                
                                <option value="damaged">Averiado</option>
                                <option value="in repair">En reparación</option>                                
                            </select>

                        </div>

                        <button  class="btn" style="background:#263238;color:#F4C05C;font-weight:bold;font-size:1.1rem" id="btnRegister">Registrar</button>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}

{{ parent() }}

<script>
    $('#btnRegister').click(()=>{
            $.ajax({
                url: "{{ path('ajax_register_driver') }}",
                type: 'POST',
                dataType: 'json',
                data: { 
                    email: $('#email').val() , 
                    password1: $('#password1').val(), 
                    password2: $('#password2').val(), 
                    phone: $("#phone").val(),
                    driverName: $("#driverName").val(),
                    driverLastName: $("#driverLastName").val(),
                    car: $("#car").val(),
                    idCompany: {{ companyId }}
                },
                success: function(result){

                    if (!result.status){
                        Swal.fire(
                        result.message,
                        "",
                        "error"
                        )       
                        console.log(result);       
                    }else{
                        Swal.fire(
                        result.message,
                        "",
                        "success"
                        )    

                        //setTimeout(function(){ window.location.href = "login" }, 1500);
                        
                    }
                    
                    
                },
            });
    });
</script>

{% endblock %}